@model IEnumerable<string>

@{
    ViewData["Title"] = "النسخ الاحتياطي";
    var backupInfos = ViewBag.BackupInfos as IEnumerable<dynamic>;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-database"></i> إدارة النسخ الاحتياطي</h2>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Info Card -->
<div class="card mb-4 border-info">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="fas fa-info-circle"></i> معلومات النسخ الاحتياطي</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <p class="mb-2">
                    <i class="fas fa-shield-alt text-success"></i>
                    <strong>النسخة الاحتياطية تحمي بياناتك من الفقدان.</strong>
                    يُنصح بشدة بالاحتفاظ بنسخ احتياطية خارجية (على حاسوب آخر أو سحابة).
                </p>
                <p class="mb-0">
                    <i class="fas fa-clock text-primary"></i>
                    <span class="badge bg-primary">نسخ احتياطي تلقائي كل 3 أيام + عند بدء التشغيل</span>
                </p>
            </div>
            <div class="col-md-4 text-end">
                <form asp-action="CreateBackup" method="post" class="d-inline">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-save"></i> إنشاء نسخة احتياطية الآن
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Backups List -->
<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-list"></i> النسخ الاحتياطية المتاحة</h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> لا توجد نسخ احتياطية. قم بإنشاء نسخة احتياطية أولاً.
            </div>
        }
        else if (backupInfos != null)
        {
            <div class="table-responsive">
                <table id="backupsTable" class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>اسم الملف</th>
                            <th>الحجم</th>
                            <th>تاريخ الإنشاء</th>
                            <th style="width: 300px;">إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int counter = 1; }
                        @foreach (var backup in backupInfos)
                        {
                            <tr>
                                <td>@(counter++)</td>
                                <td>
                                    <i class="fas fa-file-archive text-primary"></i>
                                    @backup.FileName
                                </td>
                                <td>@((backup.Size / 1024.0).ToString("N2")) KB</td>
                                <td>@backup.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Download" asp-route-fileName="@backup.FileName" 
                                           class="btn btn-success">
                                            <i class="fas fa-download"></i> تحميل
                                        </a>
                                        <form asp-action="RestoreFromList" asp-route-fileName="@backup.FileName" 
                                              method="post" class="d-inline"
                                              onsubmit="return confirm('هل أنت متأكد من استعادة هذه النسخة؟ سيتم إنشاء نسخة أمان تلقائياً. قد تحتاج لإعادة تشغيل التطبيق.')">
                                            <button type="submit" class="btn btn-warning btn-sm">
                                                <i class="fas fa-undo"></i> استعادة
                                            </button>
                                        </form>
                                        <form asp-action="Delete" asp-route-fileName="@backup.FileName" 
                                              method="post" class="d-inline"
                                              onsubmit="return confirm('هل أنت متأكد من حذف هذه النسخة الاحتياطية؟')">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> حذف
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Restore from Upload -->
<div class="card border-warning">
    <div class="card-header bg-warning text-dark">
        <h5 class="mb-0"><i class="fas fa-upload"></i> استعادة من نسخة احتياطية خارجية</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>تحذير:</strong> استعادة قاعدة البيانات ستستبدل جميع البيانات الحالية. 
            سيتم إنشاء نسخة أمان تلقائياً قبل الاستعادة.
        </div>
        <form asp-action="RestoreFromUpload" method="post" enctype="multipart/form-data" 
              onsubmit="return confirm('هل أنت متأكد تماماً من استعادة قاعدة البيانات من هذا الملف؟ سيتم استبدال جميع البيانات الحالية!')">
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label for="file" class="form-label">اختر ملف النسخة الاحتياطية (.db)</label>
                        <input type="file" class="form-control" id="file" name="file" 
                               accept=".db" required />
                        <small class="text-muted">يجب أن يكون الملف بصيغة SQLite (.db)</small>
                    </div>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-warning w-100 mb-3">
                        <i class="fas fa-upload"></i> استعادة من النسخة المرفوعة
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#backupsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json'
                },
                order: [[3, 'desc']],
                pageLength: 10
            });
        });
    </script>
}
