@model List<GoDent.BLL.Service.Abstraction.BackupFileInfo>

@{
    ViewData["Title"] = "النسخ الاحتياطي";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-database"></i> النسخ الاحتياطي</h2>
    <div class="d-flex gap-2">
        <button type="button" class="btn btn-warning btn-lg" data-bs-toggle="modal" data-bs-target="#restoreModal">
            <i class="fas fa-upload"></i> استعادة من ملف
        </button>
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-success btn-lg">
                <i class="fas fa-download"></i> إنشاء نسخة احتياطية الآن
            </button>
        </form>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Info Card -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm text-center">
            <div class="card-body">
                <i class="fas fa-copy fa-2x text-primary mb-2"></i>
                <h6 class="text-muted">إجمالي النسخ</h6>
                <h3 class="fw-bold">@Model.Count</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm text-center">
            <div class="card-body">
                <i class="fas fa-clock fa-2x text-info mb-2"></i>
                <h6 class="text-muted">آخر نسخة</h6>
                <h5 class="fw-bold">
                    @if (Model.Any())
                    {
                        @Model.First().CreatedAt.ToString("yyyy-MM-dd HH:mm")
                    }
                    else
                    {
                        <span class="text-danger">لا توجد نسخ</span>
                    }
                </h5>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm text-center">
            <div class="card-body">
                <i class="fas fa-sync-alt fa-2x text-success mb-2"></i>
                <h6 class="text-muted">النسخ التلقائي</h6>
                <h5 class="fw-bold text-success">كل 3 أيام</h5>
            </div>
        </div>
    </div>
</div>

<!-- Backups Table -->
<div class="card shadow-sm">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0"><i class="fas fa-list"></i> النسخ الاحتياطية المتاحة</h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-database fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">لا توجد نسخ احتياطية بعد</h5>
                <p class="text-muted">اضغط على زر "إنشاء نسخة احتياطية" لإنشاء أول نسخة</p>
            </div>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>اسم الملف</th>
                        <th>تاريخ الإنشاء</th>
                        <th>الحجم</th>
                        <th>إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @{ var index = 1; }
                    @foreach (var backup in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>
                                <i class="fas fa-file-alt text-primary"></i>
                                @backup.FileName
                                @if (index == 1)
                                {
                                    <span class="badge bg-success ms-1">الأحدث</span>
                                }
                            </td>
                            <td>@backup.CreatedAt.ToString("yyyy-MM-dd hh:mm tt")</td>
                            <td>@backup.SizeDisplay</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Download" asp-route-fileName="@backup.FileName"
                                       class="btn btn-info btn-sm" title="تحميل">
                                        <i class="fas fa-download"></i> تحميل
                                    </a>
                                    <form asp-action="Restore" method="post" class="d-inline"
                                          onsubmit="return confirm('⚠️ سيتم استبدال قاعدة البيانات الحالية بهذه النسخة.\nسيتم إنشاء نسخة أمان تلقائياً قبل الاستعادة.\nهل تريد المتابعة؟');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="fileName" value="@backup.FileName" />
                                        <button type="submit" class="btn btn-warning btn-sm" title="استعادة">
                                            <i class="fas fa-undo"></i> استعادة
                                        </button>
                                    </form>
                                    <form asp-action="Delete" method="post" class="d-inline"
                                          onsubmit="return confirm('هل أنت متأكد من حذف هذه النسخة الاحتياطية؟');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="fileName" value="@backup.FileName" />
                                        <button type="submit" class="btn btn-danger btn-sm" title="حذف">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        index++;
                    }
                </tbody>
            </table>
        }
    </div>
</div>

<!-- Tip -->
<div class="alert alert-info mt-4">
    <i class="fas fa-info-circle"></i>
    <strong>نصيحة:</strong> يتم إنشاء نسخة احتياطية تلقائياً كل 3 أيام وعند بدء تشغيل التطبيق.
    يُنصح بتحميل نسخة على جهازك أو فلاشة USB بشكل دوري للحماية القصوى.
    يتم الاحتفاظ بآخر 10 نسخ فقط تلقائياً.
</div>

<div class="alert alert-warning mt-2">
    <i class="fas fa-exclamation-triangle"></i>
    <strong>تنبيه:</strong> عند استعادة نسخة احتياطية، سيتم استبدال جميع البيانات الحالية.
    يتم إنشاء نسخة أمان تلقائياً قبل كل عملية استعادة.
</div>

<!-- Restore from Upload Modal -->
<div class="modal fade" id="restoreModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title">
                    <i class="fas fa-upload"></i> استعادة من ملف خارجي
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Upload" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>تحذير:</strong> سيتم استبدال قاعدة البيانات الحالية بالكامل.
                        سيتم إنشاء نسخة أمان تلقائياً قبل الاستعادة.
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">اختر ملف قاعدة البيانات (.db)</label>
                        <input type="file" name="backupFile" class="form-control" accept=".db" required />
                        <small class="text-muted">يجب أن يكون ملف SQLite بصيغة .db</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-warning"
                            onclick="return confirm('⚠️ هل أنت متأكد من استعادة قاعدة البيانات من هذا الملف؟');">
                        <i class="fas fa-upload"></i> استعادة
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
