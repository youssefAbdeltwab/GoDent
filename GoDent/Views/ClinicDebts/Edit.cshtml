@model GoDent.DAL.Entities.ClinicDebt

@{
    ViewData["Title"] = "تعديل دين";
}

<div class="card">
    <div class="card-header bg-warning text-dark">
        <h4><i class="fas fa-edit"></i> تعديل دين</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CreditorName" class="form-label">اسم الدائن</label>
                    <input asp-for="CreditorName" class="form-control" />
                    <span asp-validation-for="CreditorName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Description" class="form-label">الوصف</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Amount" class="form-label">المبلغ (ج.م)</label>
                    <input asp-for="Amount" type="number" step="0.01" min="0" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="DueDate" class="form-label">تاريخ الاستحقاق</label>
                    <input asp-for="DueDate" type="date" class="form-control" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="Category" class="form-label">التصنيف</label>
                    <select asp-for="Category" asp-items="Html.GetEnumSelectList<GoDent.DAL.Enums.ExpenseCategory>()" class="form-select">
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Status" class="form-label">الحالة</label>
                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<GoDent.DAL.Enums.DebtStatus>()" class="form-select">
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="form-check mt-4">
                        <input asp-for="IsRecurring" class="form-check-input" type="checkbox" id="isRecurringCheck" />
                        <label asp-for="IsRecurring" class="form-check-label">دين متكرر (شهري)</label>
                    </div>
                </div>

                <div class="col-md-4 mb-3" id="recurrenceDayGroup" style="display: none;">
                    <label asp-for="RecurrenceDay" class="form-label">يوم التكرار في الشهر</label>
                    <input asp-for="RecurrenceDay" type="number" min="1" max="31" class="form-control" />
                    <span asp-validation-for="RecurrenceDay" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label">ملاحظات</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-start gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> حفظ التعديلات
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-right"></i> رجوع
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('isRecurringCheck').addEventListener('change', function () {
            document.getElementById('recurrenceDayGroup').style.display = this.checked ? 'block' : 'none';
        });
        // Show on load if already checked
        if (document.getElementById('isRecurringCheck').checked) {
            document.getElementById('recurrenceDayGroup').style.display = 'block';
        }
    </script>
}
