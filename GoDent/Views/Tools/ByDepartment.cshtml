@model IEnumerable<GoDent.DAL.Entities.Tool>

@{
    ViewData["Title"] = "أدوات قسم " + ViewData["DepartmentName"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-toolbox"></i> أدوات قسم @ViewData["DepartmentName"]</h2>
    <div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-right"></i> رجوع للكل
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> إضافة أداة جديدة
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["WhatsAppAlert"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show">
        <strong>⚠️ تنبيه:</strong> الأداة "@TempData["ShortageToolName"]" أصبحت أقل من الحد الأدنى!
        <a href="@TempData["WhatsAppAlert"]" target="_blank" class="btn btn-success btn-sm ms-2">
            <i class="fab fa-whatsapp"></i> إرسال تنبيه واتساب
        </a>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Department Filter Buttons -->
<div class="mb-3">
    <div class="btn-group flex-wrap" role="group">
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-list"></i> الكل
        </a>
        @if (ViewData["Departments"] != null)
        {
            @foreach (var dept in (IEnumerable<GoDent.DAL.Entities.Department>)ViewData["Departments"])
            {
                <a asp-action="ByDepartment" asp-route-id="@dept.Id" 
                   class="btn btn-outline-primary @(dept.Name == ViewData["DepartmentName"]?.ToString() ? "active" : "")">
                    @dept.Name
                </a>
            }
        }
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <table id="toolsTable" class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>اسم الأداة</th>
                        <th>القسم</th>
                        <th>الكمية</th>
                        <th>الحد الأدنى</th>
                        <th>السعر</th>
                        <th>الحالة</th>
                        <th>تاريخ الإضافة</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tool in Model)
                    {
                        <tr>
                            <td>@tool.Name</td>
                            <td>@tool.Department.Name</td>
                            <td>@tool.Quantity</td>
                            <td>@tool.MinQuantity</td>
                            <td>@tool.Price.ToString("C")</td>
                            <td>
                                @if (tool.Quantity <= tool.MinQuantity)
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-exclamation-triangle"></i> نقص في المخزون
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle"></i> متوفر
                                    </span>
                                }
                            </td>
                            <td>@tool.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@tool.Id" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> تعديل
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@tool.Id" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> حذف
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> لا توجد أدوات في قسم @ViewData["DepartmentName"]
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#toolsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json',
                    search: "بحث:",
                    lengthMenu: "عرض _MENU_ سجل",
                    info: "عرض _START_ إلى _END_ من _TOTAL_ سجل",
                    infoEmpty: "لا توجد سجلات",
                    infoFiltered: "(منتقاة من _MAX_ سجل)",
                    paginate: {
                        first: "الأول",
                        last: "الأخير",
                        next: "التالي",
                        previous: "السابق"
                    }
                },
                order: [[6, 'desc']] // Sort by date added (newest first)
            });
        });
    </script>
}
