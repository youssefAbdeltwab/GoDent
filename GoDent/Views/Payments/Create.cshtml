@model GoDent.DAL.Entities.Payment

@{
    ViewData["Title"] = "تسجيل دفعة جديدة";
}

<div class="card">
    <div class="card-header bg-success text-white">
        <h4><i class="fas fa-money-bill-wave"></i> تسجيل دفعة جديدة</h4>
        <small>للمريض: @ViewBag.PatientName</small>
    </div>
    <div class="card-body">
        @if (ViewBag.CurrentDebt > 0)
        {
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>الرصيد المستحق الحالي:</strong> @(((decimal)ViewBag.CurrentDebt).ToString("N2")) ج.م
            </div>
        }
        else
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                لا يوجد رصيد مستحق على هذا المريض
            </div>
        }

        <form asp-action="Create" method="post">
            <input type="hidden" asp-for="PatientId" />
            <input type="hidden" asp-for="PaymentMethod" value="@GoDent.DAL.Enums.PaymentMethod.Cash" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Amount" class="form-label">المبلغ (ج.م)</label>
                    <input asp-for="Amount" type="number" min="0.01" step="0.01" class="form-control" 
                           placeholder="أدخل المبلغ المدفوع" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="PaymentDate" class="form-label">تاريخ الدفع</label>
                    <input asp-for="PaymentDate" type="date" class="form-control" />
                    <span asp-validation-for="PaymentDate" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label">ملاحظات</label>
                <textarea asp-for="Notes" class="form-control" rows="2" 
                          placeholder="مثال: دفعة أولى، سداد جزئي..."></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-start gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> تسجيل الدفعة
                </button>
                <a asp-controller="Patients" asp-action="Details" asp-route-id="@ViewBag.PatientId" class="btn btn-secondary">
                    <i class="fas fa-arrow-right"></i> رجوع
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
