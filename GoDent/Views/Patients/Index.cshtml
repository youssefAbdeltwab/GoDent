@model IEnumerable<GoDent.DAL.Entities.Patient>
 @inject GoDent.BLL.Service.Abstraction.IWhatsAppService whatsAppService

@{
    ViewData["Title"] = "قائمة المرضى";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users"></i> قائمة المرضى</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> إضافة مريض جديد
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <table id="patientsTable" class="table table-striped table-hover">
            <thead class="table-primary">
                <tr>
                    <th>الاسم</th>
                    <th>رقم الهاتف</th>
                    <th>النوع</th>
                    <th>تاريخ الميلاد</th>
                    <th>تاريخ التسجيل</th>
                    <th>الإجراءات</th>
                    <th>تواصل واتساب</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model)
                {
                    <tr>
                        <td>@patient.FullName</td>
                        <td>@patient.PhoneNumber</td>
                        <td>@patient.Gender</td>
                        <td>@patient.DateOfBirth</td>
                        <td>@patient.CreatedAt.ToString("yyyy-MM-dd")</td>
                        
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> تعديل
                                </a>
                                <a asp-action="Details" asp-route-id="@patient.Id" class="btn btn-sm btn-info">
                                    <i class="fas fa-info-circle"></i> تفاصيل
                                </a>
                                <a asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> حذف
                                </a>

                            </div>
                        </td>
                        <td>
                            <div class="btn-group-vertical btn-group-sm" role="group">
                                <a href="@whatsAppService.GeneratePostExtractionInstructionsUrl(patient)" 
                                   target="_blank" class="btn btn-success btn-sm mb-1">
                                    <i class="fab fa-whatsapp"></i> تعليمات الخلع
                                </a>
                                @if (patient.CurrentDebt > 0)
                                {
                                    <a href="@whatsAppService.GenerateDebtReminderUrl(patient, patient.CurrentDebt)" 
                                       target="_blank" class="btn btn-warning btn-sm">
                                        <i class="fab fa-whatsapp"></i> تذكير بالدفع (@patient.CurrentDebt.ToString("C"))
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#patientsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json',
                    search: "بحث:",
                    lengthMenu: "عرض _MENU_ سجل",
                    info: "عرض _START_ إلى _END_ من _TOTAL_ سجل",
                    infoEmpty: "لا توجد سجلات",
                    infoFiltered: "(منتقاة من _MAX_ سجل)",
                    paginate: {
                        first: "الأول",
                        last: "الأخير",
                        next: "التالي",
                        previous: "السابق"
                    }
                },
                pageLength: 10,
                order: [[4, 'desc']] // Sort by registration date
            });
        });
    </script>
}