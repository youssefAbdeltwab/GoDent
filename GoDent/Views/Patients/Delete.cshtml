@model GoDent.DAL.Entities.Patient

@{
    ViewData["Title"] = "حذف مريض";
}

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h4><i class="fas fa-exclamation-triangle"></i> تأكيد الحذف</h4>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <strong>تحذير:</strong> هل أنت متأكد من حذف هذا المريض؟ سيتم حذف جميع المواعيد والعلاجات والمدفوعات المرتبطة به!
        </div>

        <dl class="row">
            <dt class="col-sm-3">الاسم:</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">رقم الهاتف:</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3">تاريخ التسجيل:</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-start gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> تأكيد الحذف
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> إلغاء
                </a>
            </div>
        </form>
    </div>
</div>