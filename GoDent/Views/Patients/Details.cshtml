@model GoDent.DAL.Entities.Patient

@{
    ViewData["Title"] = "تفاصيل المريض";
    var visits = ViewBag.Visits as IEnumerable<GoDent.DAL.Entities.Visit> ?? new List<GoDent.DAL.Entities.Visit>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user"></i> تفاصيل المريض</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-right"></i> رجوع للقائمة
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Patient Info Card -->
<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-id-card"></i> بيانات المريض</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">الاسم:</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>

                    <dt class="col-sm-4">رقم الهاتف:</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>

                    <dt class="col-sm-4">النوع:</dt>
                    <dd class="col-sm-8">@(Model.Gender == GoDent.DAL.Enums.Gender.ذكر ? "ذكر" : "أنثى")</dd>

                    <dt class="col-sm-4">تاريخ الميلاد:</dt>
                    <dd class="col-sm-8">@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">العنوان:</dt>
                    <dd class="col-sm-8">@(Model.Address ?? "---")</dd>

                    <dt class="col-sm-4">التاريخ المرضي:</dt>
                    <dd class="col-sm-8">@(Model.MedicalHistory ?? "---")</dd>

                    <dt class="col-sm-4">الرصيد المستحق:</dt>
                    <dd class="col-sm-8">
                        @if (Model.CurrentDebt > 0)
                        {
                            <span class="badge bg-danger fs-6">@Model.CurrentDebt.ToString("N2") ج.م</span>
                        }
                        else
                        {
                            <span class="badge bg-success fs-6">0 ج.م</span>
                        }
                    </dd>

                    <dt class="col-sm-4">ملاحظات:</dt>
                    <dd class="col-sm-8">@(Model.Notes ?? "---")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<!-- Visits Section -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h4><i class="fas fa-calendar-check"></i> الزيارات</h4>
    <a asp-controller="Visits" asp-action="Create" asp-route-patientId="@Model.Id" class="btn btn-success">
        <i class="fas fa-plus"></i> إضافة زيارة جديدة
    </a>
</div>

@if (!visits.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> لا توجد زيارات مسجلة لهذا المريض. قم بإضافة زيارة جديدة.
    </div>
}
else
{
    @foreach (var visit in visits)
    {
        <div class="card mb-3" id="visit-@visit.Id">
            <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-calendar-day"></i>
                    <strong>زيارة بتاريخ @visit.VisitDate.ToString("yyyy-MM-dd")</strong>
                    @if (!string.IsNullOrEmpty(visit.ChiefComplaint))
                    {
                        <span class="ms-3">| سبب الزيارة: @visit.ChiefComplaint</span>
                    }
                </div>
                <div class="btn-group btn-group-sm">
                    <a asp-controller="Treatments" asp-action="Create" asp-route-visitId="@visit.Id" 
                       class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> إضافة علاج
                    </a>
                    <a asp-controller="Visits" asp-action="Edit" asp-route-id="@visit.Id" 
                       class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i>
                    </a>
                    <form asp-controller="Visits" asp-action="Delete" method="post" class="d-inline"
                          onsubmit="return confirm('هل أنت متأكد من حذف هذه الزيارة؟');">
                        <input type="hidden" name="id" value="@visit.Id" />
                        <input type="hidden" name="patientId" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(visit.Diagnosis))
                {
                    <p><strong>التشخيص:</strong> @visit.Diagnosis</p>
                }
                @if (!string.IsNullOrEmpty(visit.Notes))
                {
                    <p><strong>ملاحظات:</strong> @visit.Notes</p>
                }

                @if (visit.Treatments != null && visit.Treatments.Any())
                {
                    <h6 class="mt-3"><i class="fas fa-tooth"></i> العلاجات</h6>
                    <table class="table table-sm table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 100px;">رقم السن</th>
                                <th>وصف العلاج</th>
                                <th style="width: 120px;">التكلفة</th>
                                <th style="width: 120px;">التاريخ</th>
                                <th style="width: 100px;">إجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var treatment in visit.Treatments)
                            {
                                <tr>
                                    <td class="text-center">
                                        @if (treatment.ToothNumber.HasValue)
                                        {
                                            <span class="badge bg-info">@treatment.ToothNumber</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">---</span>
                                        }
                                    </td>
                                    <td>@treatment.Description</td>
                                    <td class="text-center">@treatment.Cost.ToString("N2") ج.م</td>
                                    <td class="text-center">@treatment.TreatmentDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-controller="Treatments" asp-action="Edit" asp-route-id="@treatment.Id" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-controller="Treatments" asp-action="Delete" method="post" class="d-inline"
                                                  onsubmit="return confirm('هل أنت متأكد من حذف هذا العلاج؟');">
                                                <input type="hidden" name="id" value="@treatment.Id" />
                                                <input type="hidden" name="patientId" value="@Model.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-primary">
                                <td colspan="2" class="text-end"><strong>إجمالي تكلفة الزيارة:</strong></td>
                                <td class="text-center"><strong>@visit.Treatments.Sum(t => t.Cost).ToString("N2") ج.م</strong></td>
                                <td colspan="2"></td>
                            </tr>
                        </tfoot>
                    </table>
                }
                else
                {
                    <p class="text-muted"><i class="fas fa-info-circle"></i> لا توجد علاجات مسجلة لهذه الزيارة.</p>
                }
            </div>
        </div>
    }
}
