@model GoDent.DAL.Entities.Patient
@inject GoDent.BLL.Service.Abstraction.IWhatsAppService whatsAppService

@{
    ViewData["Title"] = "تفاصيل المريض";
    var visits = ViewBag.Visits as IEnumerable<GoDent.DAL.Entities.Visit> ?? new List<GoDent.DAL.Entities.Visit>();
    var payments = ViewBag.Payments as IEnumerable<GoDent.DAL.Entities.Payment> ?? new List<GoDent.DAL.Entities.Payment>();
    decimal totalTreatmentCost = ViewBag.TotalTreatmentCost ?? 0m;
    decimal totalPayments = ViewBag.TotalPayments ?? 0m;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user"></i> تفاصيل المريض</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-right"></i> رجوع للقائمة
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Patient Info Card -->
<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-id-card"></i> بيانات المريض</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">الاسم:</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>

                    <dt class="col-sm-4">رقم الهاتف:</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>

                    <dt class="col-sm-4">النوع:</dt>
                    <dd class="col-sm-8">@(Model.Gender == GoDent.DAL.Enums.Gender.ذكر ? "ذكر" : "أنثى")</dd>

                    <dt class="col-sm-4">تاريخ الميلاد:</dt>
                    <dd class="col-sm-8">@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">العنوان:</dt>
                    <dd class="col-sm-8">@(Model.Address ?? "---")</dd>

                    <dt class="col-sm-4">التاريخ المرضي:</dt>
                    <dd class="col-sm-8">@(Model.MedicalHistory ?? "---")</dd>

                    <dt class="col-sm-4">الرصيد المستحق:</dt>
                    <dd class="col-sm-8">
                        @if (Model.CurrentDebt > 0)
                        {
                            <span class="badge bg-danger fs-6">@Model.CurrentDebt.ToString("N2") ج.م</span>
                        }
                        else
                        {
                            <span class="badge bg-success fs-6">0 ج.م</span>
                        }
                    </dd>

                    <dt class="col-sm-4">ملاحظات:</dt>
                    <dd class="col-sm-8">@(Model.Notes ?? "---")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<!-- Financial Summary Card -->
<div class="card mb-4 border-info">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="fas fa-calculator"></i> الملخص المالي</h5>
    </div>
    <div class="card-body">
        <div class="row text-center">
            <div class="col-md-4">
                <div class="border rounded p-3">
                    <h6 class="text-muted">إجمالي التكاليف</h6>
                    <h4 class="text-primary">@totalTreatmentCost.ToString("N2") ج.م</h4>
                </div>
            </div>
            <div class="col-md-4">
                <div class="border rounded p-3">
                    <h6 class="text-muted">إجمالي المدفوعات</h6>
                    <h4 class="text-success">@totalPayments.ToString("N2") ج.م</h4>
                </div>
            </div>
            <div class="col-md-4">
                <div class="border rounded p-3">
                    <h6 class="text-muted">الرصيد المستحق</h6>
                    @if (Model.CurrentDebt > 0)
                    {
                        <h4 class="text-danger">@Model.CurrentDebt.ToString("N2") ج.م</h4>
                    }
                    else
                    {
                        <h4 class="text-success">0.00 ج.م</h4>
                    }
                </div>
            </div>
        </div>
        
        @if (Model.CurrentDebt > 0)
        {
            <div class="row mt-3">
                <div class="col-12 text-center">
                    <a href="@whatsAppService.GenerateDebtReminderUrl(Model, Model.CurrentDebt)" 
                       target="_blank" 
                       class="btn btn-warning">
                        <i class="fab fa-whatsapp"></i> تذكير المريض بالرصيد عبر واتساب
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Visits Section -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h4><i class="fas fa-calendar-check"></i> الزيارات</h4>
    <a asp-controller="Visits" asp-action="Create" asp-route-patientId="@Model.Id" class="btn btn-success">
        <i class="fas fa-plus"></i> إضافة زيارة جديدة
    </a>
</div>

@if (!visits.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> لا توجد زيارات مسجلة لهذا المريض. قم بإضافة زيارة جديدة.
    </div>
}
else
{
    @foreach (var visit in visits)
    {
        <div class="card mb-3" id="visit-@visit.Id">
            <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-calendar-day"></i>
                    <strong>زيارة بتاريخ @visit.VisitDate.ToString("yyyy-MM-dd")</strong>
                    @if (!string.IsNullOrEmpty(visit.ChiefComplaint))
                    {
                        <span class="ms-3">| سبب الزيارة: @visit.ChiefComplaint</span>
                    }
                </div>
                <div class="btn-group btn-group-sm">
                    <a asp-controller="Treatments" asp-action="Create" asp-route-visitId="@visit.Id" 
                       class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> إضافة علاج
                    </a>
                    <a asp-controller="Visits" asp-action="Edit" asp-route-id="@visit.Id" 
                       class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i>
                    </a>
                    <form asp-controller="Visits" asp-action="Delete" method="post" class="d-inline"
                          onsubmit="return confirm('هل أنت متأكد من حذف هذه الزيارة؟');">
                        <input type="hidden" name="id" value="@visit.Id" />
                        <input type="hidden" name="patientId" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(visit.Diagnosis))
                {
                    <p><strong>التشخيص:</strong> @visit.Diagnosis</p>
                }
                @if (!string.IsNullOrEmpty(visit.Notes))
                {
                    <p><strong>ملاحظات:</strong> @visit.Notes</p>
                }

                @if (visit.Treatments != null && visit.Treatments.Any())
                {
                    <h6 class="mt-3"><i class="fas fa-tooth"></i> العلاجات</h6>
                    <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 80px;">رقم السن</th>
                                <th>وصف العلاج</th>
                                <th>الطبيب</th>
                                <th style="width: 100px;">التكلفة</th>
                                <th style="width: 100px;">المعمل</th>
                                <th style="width: 100px;">الصافي</th>
                                <th style="width: 100px;">الطبيب 40%</th>
                                <th style="width: 100px;">العيادة 60%</th>
                                <th style="width: 100px;">التاريخ</th>
                                <th style="width: 100px;">إجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var treatment in visit.Treatments)
                            {
                                <tr>
                                    <td class="text-center">
                                        @if (treatment.ToothNumber.HasValue)
                                        {
                                            <span class="badge bg-info">@treatment.ToothNumber</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">---</span>
                                        }
                                    </td>
                                    <td>@treatment.Description</td>
                                    <td>
                                        <i class="fas fa-user-md text-primary"></i>
                                        @(treatment.Doctor?.FullName ?? "---")
                                    </td>
                                    <td class="text-center">@treatment.Cost.ToString("N2")</td>
                                    <td class="text-center">
                                        @if (treatment.HasLabCost && treatment.LabCost.HasValue)
                                        {
                                            <span class="text-danger">@treatment.LabCost.Value.ToString("N2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">---</span>
                                        }
                                    </td>
                                    <td class="text-center fw-bold">@treatment.NetCost.ToString("N2")</td>
                                    <td class="text-center text-warning">@treatment.DoctorShare.ToString("N2")</td>
                                    <td class="text-center text-success">@treatment.ClinicShare.ToString("N2")</td>
                                    <td class="text-center">@treatment.TreatmentDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-controller="Treatments" asp-action="Edit" asp-route-id="@treatment.Id" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-controller="Treatments" asp-action="Delete" method="post" class="d-inline"
                                                  onsubmit="return confirm('هل أنت متأكد من حذف هذا العلاج؟');">
                                                <input type="hidden" name="id" value="@treatment.Id" />
                                                <input type="hidden" name="patientId" value="@Model.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-primary">
                                <td colspan="3" class="text-end"><strong>إجمالي الزيارة:</strong></td>
                                <td class="text-center"><strong>@visit.Treatments.Sum(t => t.Cost).ToString("N2")</strong></td>
                                <td class="text-center"><strong>@visit.Treatments.Where(t => t.HasLabCost).Sum(t => t.LabCost ?? 0).ToString("N2")</strong></td>
                                <td class="text-center"><strong>@visit.Treatments.Sum(t => t.NetCost).ToString("N2")</strong></td>
                                <td class="text-center"><strong>@visit.Treatments.Sum(t => t.DoctorShare).ToString("N2")</strong></td>
                                <td class="text-center"><strong>@visit.Treatments.Sum(t => t.ClinicShare).ToString("N2")</strong></td>
                                <td colspan="2"></td>
                            </tr>
                        </tfoot>
                    </table>
                    </div>
                }
                else
                {
                    <p class="text-muted"><i class="fas fa-info-circle"></i> لا توجد علاجات مسجلة لهذه الزيارة.</p>
                }
            </div>
        </div>
    }
}

<!-- Payments Section -->
<div class="d-flex justify-content-between align-items-center mb-3 mt-4">
    <h4><i class="fas fa-money-bill-wave"></i> سجل المدفوعات</h4>
    <a asp-controller="Payments" asp-action="Create" asp-route-patientId="@Model.Id" class="btn btn-success">
        <i class="fas fa-plus"></i> تسجيل دفعة جديدة
    </a>
</div>

@if (!payments.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> لا توجد مدفوعات مسجلة لهذا المريض.
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-success">
                    <tr>
                        <th style="width: 150px;">تاريخ الدفع</th>
                        <th style="width: 150px;">المبلغ</th>
                        <th>ملاحظات</th>
                        <th style="width: 100px;">إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payment in payments)
                    {
                        <tr>
                            <td>@payment.PaymentDate.ToString("yyyy-MM-dd")</td>
                            <td class="text-success fw-bold">@payment.Amount.ToString("N2") ج.م</td>
                            <td>@(payment.Notes ?? "---")</td>
                            <td>
                                <form asp-controller="Payments" asp-action="Delete" method="post" class="d-inline"
                                      onsubmit="return confirm('هل أنت متأكد من حذف هذه الدفعة؟');">
                                    <input type="hidden" name="id" value="@payment.Id" />
                                    <input type="hidden" name="patientId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> حذف
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-success">
                        <td class="text-end"><strong>الإجمالي:</strong></td>
                        <td class="fw-bold">@payments.Sum(p => p.Amount).ToString("N2") ج.م</td>
                        <td colspan="2"></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
}
