<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - GoDent</title>

    <!-- Bootstrap 5 RTL -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- DataTables RTL -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            direction: rtl;
            text-align: right;
        }

        .sidebar {
            min-height: 100vh;
            background: linear-gradient(180deg, #1e3c72 0%, #2a5298 100%);
        }

            .sidebar .nav-link {
                color: rgba(255,255,255,0.8);
                margin: 5px 15px;
                border-radius: 5px;
                text-align: right;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: rgba(255,255,255,0.1);
                    color: #fff;
                }

                .sidebar .nav-link i {
                    margin-left: 10px;
                    margin-right: 0;
                }

        .content-wrapper {
            padding: 20px;
            background-color: #f4f6f9;
            min-height: 100vh;
        }

        /* Fix table alignment */
        table {
            text-align: right;
        }

            table th, table td {
                text-align: right !important;
            }

        /* Fix button groups */
        .btn-group {
            direction: ltr;
        }

        /* Fix form labels */
        .form-label {
            text-align: right;
            display: block;
        }

        /* Fix alerts */
        .alert {
            text-align: right;
        }

        /* DataTables search box alignment */
        .dataTables_filter {
            text-align: left !important;
        }

            .dataTables_filter label {
                float: left;
            }

        .dataTables_length {
            text-align: right !important;
        }

        .dataTables_info {
            text-align: right !important;
        }

        /* Fix pagination alignment */
        .dataTables_paginate {
            text-align: left !important;
        }

        /* Card headers */
        .card-header {
            text-align: right;
        }

        /* Fix input groups for RTL */
        .input-group > :not(:first-child) {
            margin-right: -1px;
            margin-left: 0;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-md-block sidebar">
                <div class="position-sticky pt-3">
                    <div class="text-center mb-4">
                        <h3 class="text-white"><i class="fas fa-tooth"></i> GoDent</h3>
                        <small class="text-white-50">إدارة عيادة الأسنان</small>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/">
                                <i class="fas fa-dashboard"></i> لوحة التحكم
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Patients" asp-action="Index">
                                <i class="fas fa-users"></i> المرضى
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Appointments" asp-action="Index">
                                <i class="fas fa-calendar-check"></i> المواعيد
                            </a>
                        </li>
                     
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-tooth"></i> السجل السني
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-money-bill"></i> المدفوعات والديون
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-chart-line"></i> التقارير المالية
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 ms-sm-auto content-wrapper">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>