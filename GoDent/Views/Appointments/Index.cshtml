@model IEnumerable<GoDent.DAL.Entities.Appointment>
@inject GoDent.BLL.Service.Abstraction.IWhatsAppService whatsAppService

@{
    ViewData["Title"] = "المواعيد";
    var currentDate = ViewBag.CurrentDate != null ? (DateTime)ViewBag.CurrentDate : DateTime.Today;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-calendar"></i> جدول المواعيد</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-calendar-plus"></i> حجز موعد جديد
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Date Navigator -->
<div class="card shadow-sm mb-3">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-3 text-end">
                <a asp-action="Index" asp-route-date="@currentDate.AddDays(1).ToString("yyyy-MM-dd")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> اليوم التالي
                </a>
            </div>
            <div class="col-md-6 text-center">
                <h4 class="mb-0">
                    <i class="fas fa-calendar-day text-primary"></i>
                    @currentDate.ToString("dddd، dd MMMM yyyy", new System.Globalization.CultureInfo("ar-EG"))
                </h4>
            </div>
            <div class="col-md-3 text-start">
                <a asp-action="Index" asp-route-date="@currentDate.AddDays(-1).ToString("yyyy-MM-dd")" class="btn btn-outline-secondary">
                    اليوم السابق <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12 text-center">
                <a asp-action="Index" asp-route-date="@DateTime.Today.ToString("yyyy-MM-dd")" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-home"></i> اليوم
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Appointments Table -->
<div class="card shadow-sm">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle"></i> لا توجد مواعيد لهذا اليوم
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th>اسم المريض</th>
                            <th>رقم الهاتف</th>
                            <th>التاريخ</th>
                            <th>من</th>
                            <th>إلى</th>
                            <th>الحالة</th>
                            <th>ملاحظات</th>
                            <th>الإجراءات</th>
                            <th>تذكير واتساب</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderBy(a => a.AppointmentDate))
                        {
                            <tr>
                                <td>
                                    <strong>@item.Patient.FullName</strong>
                                </td>
                                <td>
                                    <i class="fas fa-phone text-muted"></i> @item.Patient.PhoneNumber
                                </td>
                                <td>
                                    @item.AppointmentDate.ToString("yyyy-MM-dd")
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        @(item.StartTime.HasValue? DateTime.Today.Add(item.StartTime.Value).ToString("hh:mm tt") : item.AppointmentDate.ToString("hh:mm tt"))
                                    </span>
                                </td>
                                <td>
                                    @if (item.EndTime.HasValue)
                                    {
                                        <span class="badge bg-secondary">
                                            @DateTime.Today.Add(item.EndTime.Value).ToString("hh:mm tt")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Status == GoDent.DAL.Enums.AppointmentStatus.Scheduled)
                                    {
                                        <span class="badge bg-primary">
                                            <i class="fas fa-clock"></i> @item.Status
                                        </span>
                                    }
                                    else if (item.Status == GoDent.DAL.Enums.AppointmentStatus.Completed)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle"></i> @item.Status
                                        </span>
                                    }
                                    else if (item.Status == GoDent.DAL.Enums.AppointmentStatus.Cancelled)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times-circle"></i> @item.Status
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">@item.Status</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Notes))
                                    {
                                        <span title="@item.Notes" data-bs-toggle="tooltip">
                                            @(item.Notes.Length > 30 ? item.Notes.Substring(0, 30) + "..." : item.Notes)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @if (item.Status == GoDent.DAL.Enums.AppointmentStatus.Scheduled)
                                        {
                                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <input type="hidden" name="status" value="مكتمل" />
                                                <button type="submit" class="btn btn-sm btn-success" title="تم الموعد">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        }
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (item.Status != GoDent.DAL.Enums.AppointmentStatus.Cancelled)
                                        {
                                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <input type="hidden" name="status" value="ملغي" />
                                                <button type="submit" class="btn btn-sm btn-danger" title="إلغاء الموعد"
                                                        onclick="return confirm('هل أنت متأكد من إلغاء هذا الموعد؟')">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @{
                                        var isToday = currentDate.Date == DateTime.Today.Date;
                                        var isTomorrow = currentDate.Date == DateTime.Today.AddDays(1).Date;
                                    }
                                    
                                    @if (isToday && item.Status == GoDent.DAL.Enums.AppointmentStatus.Scheduled)
                                    {
                                        <a href="@whatsAppService.GenerateTodayAppointmentReminderUrl(item)" 
                                           target="_blank" class="btn btn-success btn-sm">
                                            <i class="fab fa-whatsapp"></i> موعد اليوم
                                        </a>
                                    }
                                    else if (isTomorrow && item.Status == GoDent.DAL.Enums.AppointmentStatus.Scheduled)
                                    {
                                        <a href="@whatsAppService.GenerateTomorrowAppointmentReminderUrl(item)" 
                                           target="_blank" class="btn btn-success btn-sm">
                                            <i class="fab fa-whatsapp"></i> موعد الغد
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Summary Statistics -->
            <div class="row mt-3">
                <div class="col-md-12">
                    <div class="alert alert-light border">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h5 class="text-primary">@Model.Count()</h5>
                                <small class="text-muted">إجمالي المواعيد</small>
                            </div>
                            <div class="col-md-3">
                                <h5 class="text-warning">@Model.Count(a => a.Status == GoDent.DAL.Enums.AppointmentStatus.Scheduled)</h5>
                                <small class="text-muted">مواعيد قادمة</small>
                            </div>
                            <div class="col-md-3">
                                <h5 class="text-success">@Model.Count(a => a.Status == GoDent.DAL.Enums.AppointmentStatus.Completed)</h5>
                                <small class="text-muted">مواعيد مكتملة</small>
                            </div>
                            <div class="col-md-3">
                                <h5 class="text-danger">@Model.Count(a => a.Status == GoDent.DAL.Enums.AppointmentStatus.Cancelled)</h5>
                                <small class="text-muted">مواعيد ملغاة</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Initialize Bootstrap tooltips
        $(document).ready(function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
}
