@model GoDent.DAL.Entities.Appointment

@{
    ViewData["Title"] = "تعديل موعد";
}

<div class="card">
    <div class="card-header bg-warning">
        <h4><i class="fas fa-calendar-edit"></i> تعديل موعد</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="PatientId" class="form-label">المريض</label>
                <select asp-for="PatientId" class="form-select" asp-items="@(ViewData["PatientId"] as SelectList)"></select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="AppointmentDate" class="form-label">التاريخ والوقت</label>
                    <input asp-for="AppointmentDate" type="datetime-local" value="@(ViewData["Date"])" class="form-control" />
                    <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Status" class="form-label">الحالة</label>
                    <select asp-for="Status" class="form-select">
                        <option value="مجدول">مجدول</option>
                        <option value="مكتمل">مكتمل</option>
                        <option value="ملغي">ملغي</option>
                    </select>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label">ملاحظات</label>
                <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
            </div>

            <div class="d-flex justify-content-start gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> حفظ التعديلات
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-right"></i> رجوع
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}