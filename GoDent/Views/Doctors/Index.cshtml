@model IEnumerable<GoDent.DAL.Entities.Doctor>

@{
    ViewData["Title"] = "الأطباء";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-md"></i> إدارة الأطباء</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> إضافة طبيب جديد
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <table id="doctorsTable" class="table table-striped table-hover">
            <thead class="table-primary">
                <tr>
                    <th>#</th>
                    <th>اسم الطبيب</th>
                    <th>رقم الهاتف</th>
                    <th>التخصص</th>
                    <th>الحالة</th>
                    <th>عدد العلاجات</th>
                    <th style="width: 200px;">إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @{ int counter = 1; }
                @foreach (var doctor in Model)
                {
                    <tr>
                        <td>@(counter++)</td>
                        <td><strong>@doctor.FullName</strong></td>
                        <td>@(doctor.PhoneNumber ?? "---")</td>
                        <td>@(doctor.Specialty ?? "---")</td>
                        <td>
                            @if (doctor.IsActive)
                            {
                                <span class="badge bg-success">نشط</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">غير نشط</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-info">@doctor.Treatments.Count</span>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@doctor.Id" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> التفاصيل
                                </a>
                                <a asp-action="Edit" asp-route-id="@doctor.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> تعديل
                                </a>
                                <form asp-action="Delete" method="post" class="d-inline"
                                      onsubmit="return confirm('هل أنت متأكد من حذف هذا الطبيب؟');">
                                    <input type="hidden" name="id" value="@doctor.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> حذف
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#doctorsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json'
                },
                order: [[0, 'asc']]
            });
        });
    </script>
}
