@model IEnumerable<GoDent.DAL.Entities.Doctor>

@{
    ViewData["Title"] = "إدارة الأطباء";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-md"></i> إدارة الأطباء</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> إضافة طبيب جديد
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> لا يوجد أطباء مسجلون. قم بإضافة طبيب جديد.
            </div>
        }
        else
        {
            <table id="doctorsTable" class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>اسم الطبيب</th>
                        <th>رقم الهاتف</th>
                        <th>التخصص</th>
                        <th>الحالة</th>
                        <th>تاريخ الإضافة</th>
                        <th style="width: 200px;">إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int counter = 1; }
                    @foreach (var doctor in Model)
                    {
                        <tr class="@(!doctor.IsActive ? "table-secondary" : "")">
                            <td>@(counter++)</td>
                            <td>
                                <i class="fas fa-user-md text-primary"></i> @doctor.FullName
                            </td>
                            <td>
                                <a href="tel:@doctor.PhoneNumber" class="text-decoration-none">
                                    @doctor.PhoneNumber
                                </a>
                            </td>
                            <td>@(doctor.Specialization ?? "---")</td>
                            <td>
                                @if (doctor.IsActive)
                                {
                                    <span class="badge bg-success">نشط</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">غير نشط</span>
                                }
                            </td>
                            <td>@doctor.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@doctor.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> تفاصيل
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@doctor.Id" class="btn btn-warning">
                                        <i class="fas fa-edit"></i> تعديل
                                    </a>
                                    <form asp-action="ToggleActive" asp-route-id="@doctor.Id" method="post" class="d-inline">
                                        @if (doctor.IsActive)
                                        {
                                            <button type="submit" class="btn btn-secondary btn-sm"
                                                    onclick="return confirm('هل تريد تعطيل هذا الطبيب؟')">
                                                <i class="fas fa-ban"></i> تعطيل
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-success btn-sm"
                                                    onclick="return confirm('هل تريد تفعيل هذا الطبيب؟')">
                                                <i class="fas fa-check"></i> تفعيل
                                            </button>
                                        }
                                    </form>
                                    <form asp-action="Delete" asp-route-id="@doctor.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm"
                                                onclick="return confirm('هل أنت متأكد من حذف هذا الطبيب؟')">
                                            <i class="fas fa-trash"></i> حذف
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#doctorsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json'
                },
                order: [[1, 'asc']]
            });
        });
    </script>
}
